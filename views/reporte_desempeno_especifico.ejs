                    <div class="absolute top-24 left-4 fondo">
                        <div class="grid grid-cols-12 gap-12 p-2">
                            <div class="rounded-lg parrafo m-1 p-4">
                                <% if (indexComp == 0) { %>
                                    <p class="text-lg titulo">4.2 RESULTADOS DETALLADOS POR COMPETENCIA CARDINAL:</p>
                                <% } %> 
                                <br>
                                <img class="rounded-lg m-0" width="100%" src="<%= host %>/<%= item.dataResultadoCompetenciaTotal %>" alt="">
                                <br>
                                <img class="rounded-lg m-0" width="100%" src="<%= host %>/<%= item.dataResultadoCompetencia %>" alt="">
                                <br>
                            </div>
                          </div>
                    </div>
                </div>
            <% }); %>


            <div class="pantalla">
                <div class="absolute top-24 left-4 fondo">
                    <div class="grid grid-cols-12 gap-12 p-2">
                        <div class="rounded-lg parrafo m-1 p-4">
                            <p class="text-lg titulo">5. PROMEDIO EVALUACIÓN DE COMPETENCIAS ESPECIFÍCAS:</p>
                            <br>
                            <img class="rounded-lg m-0" width="100%" src="<%= host %>/<%= usuario.dataResultadoObtenidoEspecificas %>" alt="">
                            <%- include('semaforo_desempeno_cualitativas', {semaforo_cualitativas: semaforo_cualitativas}); %>
