                            <%- include('tabla_cualitativas',{data: usuario.generales}); %>
                        </div>
                      </div>
                </div>
            </div>
            <div class="pantalla">
                <div class="absolute top-24 left-4 fondo">
                    <div class="grid grid-cols-12 gap-12 p-2">
                        <div class="rounded-lg parrafo m-1 p-4">
                            <p class="text-lg titulo">4.1 COMPETENCIAS GENERALES POR EVALUADOR:</p>
