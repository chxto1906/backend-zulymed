                            <br>
                            <%- include('semaforo_desempeno_cuantitativas', {semaforo_cuantitativas: semaforo_cuantitativas}); %>
                            <br>  
                        </div>
                      </div>
                </div>
            </div>
            <div class="pantalla">
                <div class="absolute top-24 left-4 fondo">
                    <div class="grid grid-cols-12 gap-12 p-2">
                        <div class="rounded-lg parrafo m-1 p-4">
                            <br>
                            <%- include('tabla_cuantitativas',{data: usuario.kpis}); %>
                            <br>
                            <img class="rounded-lg m-0" width="100%" src="<%= host %>/<%= usuario.dataBarraCumplimientoKpis %>" alt="">
                        </div>
                      </div>
                </div>
            </div>
            <div class="pantalla">
                <div class="absolute top-24 left-4 fondo">
                    <div class="grid grid-cols-12 gap-12 p-2">
                        <div class="rounded-lg parrafo m-1 p-4">
                            <p class="text-lg titulo">3. RESULTADO DESEMPEÑO SOCIAL:</p>
                            <br>
                            <img class="rounded-lg m-0" width="100%" src="<%= host %>/<%= usuario.dataResultadoObtenidoDesempeno %>" alt="">
                            <br>
                            <%- include('semaforo_desempeno_cuantitativas', {semaforo_cuantitativas: semaforo_cuantitativas}); %>
                            <br>  
                        </div>
                      </div>
                </div>
            </div>
            <div class="pantalla">
                <div class="absolute top-24 left-4 fondo">
                    <div class="grid grid-cols-12 gap-12 p-2">
                        <div class="rounded-lg parrafo m-1 p-4">
                            <br>  
                            <%- include('tabla_cuantitativas',{data: usuario.desempeno}); %>
                            <br>
                            <img class="rounded-lg m-0" width="100%" src="<%= host %>/<%= usuario.dataBarraCumplimientoDesempeno %>" alt="">
                        </div>
                      </div>
                </div>
            </div>
            <div class="pantalla">
                <div class="absolute top-24 left-4 fondo">
                    <div class="grid grid-cols-12 gap-12 p-2">
                        <div class="rounded-lg parrafo m-1 p-4">
                            <p class="text-lg titulo">4. PROMEDIO EVALUACIÓN DE COMPETENCIAS GENERALES:</p>
                            <br>
                            <img class="rounded-lg m-0" width="100%" src="<%= host %>/<%= usuario.dataResultadoObtenidoGenerales %>" alt="">
