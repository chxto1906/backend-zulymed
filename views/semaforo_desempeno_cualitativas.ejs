<html>
    <style>
        .dot {
            height: 20px;
            width: 20px;
            /*background-color: #bbb;*/
            border-radius: 50%;
            display: inline-block;
            text-align: center;
        }
    </style>
    <tbody>
        <table style="border-radius: 1em;width: 96%; margin-left: 10px; margin-right: 10px;">
            <tbody>
                <tr class="pl-2 pr-2 pt-0 pb-0">
                    <td class="p-3" style="background-color: #f6f7f6; width: 25%; text-align: center;">
                        <div class="dot" style="background-color: <%= semaforo_cualitativas.deficiente.color %>"></div>
                        <p style="font-size: 10px;color: <%= semaforo_cualitativas.deficiente.color %>"><%= semaforo_cualitativas.deficiente.desde + '%' + ' - ' + semaforo_cualitativas.deficiente.hasta %></p>
                        <p style="font-size: 10px;"><%= semaforo_cualitativas.deficiente.label %></p>
                    </td>
                    <td class="p-3" style="background-color: #f6f7f6; width: 25%;text-align: center;">
                        <div class="dot" style="background-color: <%= semaforo_cualitativas.regular.color %>"></div>
                        <p style="font-size: 10px;color: <%= semaforo_cualitativas.regular.color %>"><%= semaforo_cualitativas.regular.desde + '%' + ' - ' + semaforo_cualitativas.regular.hasta %></p>
                        <p style="font-size: 10px;"><%= semaforo_cualitativas.regular.label %></p>
                    </td>
                    <td class="p-3" style="background-color: #f6f7f6; width: 25%;text-align: center;">
                        <div class="dot" style="background-color: <%= semaforo_cualitativas.bueno.color %>"></div>
                        <p style="font-size: 10px;color: <%= semaforo_cualitativas.bueno.color %>"><%= semaforo_cualitativas.bueno.desde + '%' + ' - ' + semaforo_cualitativas.bueno.hasta %></p>
                        <p style="font-size: 10px;"><%= semaforo_cualitativas.bueno.label %></p>
                    </td>
                    <td class="p-3" style="background-color: #f6f7f6; width: 25%;text-align: center;">
                        <div class="dot" style="background-color: <%= semaforo_cualitativas.excelente.color %>"></div>
                        <p style="font-size: 10px;color: <%= semaforo_cualitativas.excelente.color %>"><%= semaforo_cualitativas.excelente.desde + '%' + ' - ' + semaforo_cualitativas.excelente.hasta %></p>
                        <p style="font-size: 10px;"><%= semaforo_cualitativas.excelente.label %></p>
                    </td>
                </tr>
            </tbody>
        </table>
    </tbody>
</html>