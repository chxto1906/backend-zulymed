<html>
    <style>
        .title-head {
            color: #FFFFFF;
            background-color: #265b86;
            height: 10px;
            font-size: 9px;
            font-weight: bold;
            text-align: center;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .rows-body {
            text-align: center; 
            font-size: 9px;
            margin-top: -11px;
            padding: 2px;
            height: 20px;
            margin-right: 1px;;
        }
        .table-zebra {
            border: 1px solid #373737;
            border-collapse: collapse;
        }




    .progress-bar {
        border-radius: 0px;
        overflow: hidden;
        width: 99%;
    }

    span {
            display: block;
        }

    .bar {
        background: #eef1f3;
    }

    .progress {
        color: #fff;
        padding: 7px;
    }

    .progress-bar {
        top: 3px;
        right: 2px;
        left: 2px;
        max-width: 100%;
        position: absolute;
        transform: translate3d(-50%,-50%,0);
    }

    .negro{
        font-weight: bold;
    }


    </style>
    <body>
        <table class="table-zebra" style="width: 100%;">
            <thead>
                <tr class="head-desempeno table-zebra">
                    <th rowspan="2" class="title-head table-zebra"></th>
                    <th colspan="<%= resultado[0].generales.items.length %>" class="title-head table-zebra">COMPETENCIAS</th>
                    <th rowspan="2" class="title-head table-zebra">TOTAL</th>
                </tr>
                <tr class="head-desempeno table-zebra">
                    <% resultado[0].generales.items.forEach(function(item,index){ %>
                        <th class="title-head table-zebra"><%= item.competencia %></th>
                    <% }); %>
                </tr>
            </thead>
            <tbody>
                <% resultado.forEach(function(item,index){ %>
                    <tr class="p-0 rows-zebra">
                        <td class="rows-body table-zebra negro">
                            <%= headers[index] %>
                        </td>
                        <% item.generales.items.forEach(function(it,i){ %>
                            <td class="rows-body table-zebra">
                                <%= it.cumplimiento + '%' %>
                            </td>
                        <% }); %>
                        <td class="rows-body table-zebra">
                            <%= item.generales.semaforo.valor + '%' %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
    </body>
</html>